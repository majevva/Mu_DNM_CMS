<script type="text/javascript">
$(document).ready(function () {
	$('a[id^="lattest_"]').each(function () {
		App.initializeTooltip($(this), true, 'warehouse/item_info');
	});
});	
</script>
<% 
if(typeof items != 'undefined'){ 
if(items != false){
%>
<% 
for(var i=0; i < items.length; i++) { 
	if(i == 2){
		break;
	}
%>
<div id="market-item">
	<div id="market-img"><a id="lattest_<%= i+1 %>" href="#" data-info="<%= items[i].item %>"><img src="<%= items[i].image %>" style="max-height:65px;" /></a></div>
	<div id="market-info">
		<div id="market-name"><%= items[i].namenostyle %></div>
		<div><%= App.lc.translate('Price').fetch() %>: <font color="gold"><%= items[i].price %></font></div>
		<div id="buy"><a href="<%= base_url %>market/buy/<%= items[i].id %>"><%= App.lc.translate('Buy Now').fetch() %></a></div>
	</div>
</div>

<% } %>
<%
}
else{
%>
<div style="padding:15px;"><div class="i_note"><%= App.lc.translate('No Items Found.').fetch() %></div></div>
<%
}
} 
%>